  "scripts": {
    "start": "tsc && node dist/src/main/index.js",
    "test": "npm run test-unit && npm run test-integration",
    "test-unit": "jest --force-exit -c jest-unit-config.json",
    "test-integration": "jest --runInBand --force-exit -c jest-integration-config.json",
