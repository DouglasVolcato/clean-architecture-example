    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.3",
    "@types/cors": "^2.8.14",
    "@types/dotenv": "^8.2.0",
    "@types/email-validator": "^1.0.6",
    "@types/express": "^4.17.18",
